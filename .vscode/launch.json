    "version": "0.2.0",
    "configurations": [
        {
            "name": "Nanobrok: Debugger",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true
        }
    ]
}